# Docker Development Environment Configuration for DocSafe
# All services run in Docker containers for development

# Backend Configuration
DATABASE_URL=postgresql://securevault_user:securevault_password@db:5432/securevault
REDIS_URL=redis://:redis_password@redis:6379/0
SECRET_KEY=your-super-secret-key-change-in-production-docker-dev-123456789
ENVIRONMENT=docker-development
CORS_ORIGINS=["http://localhost:8080", "http://127.0.0.1:8080", "http://localhost:3005", "http://127.0.0.1:3005"]

# Security Settings (Development)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# Development Features
DEBUG=true
LOG_LEVEL=INFO
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0", "backend"]

# MFA Settings
MFA_ISSUER=DocSafe Docker Dev
MFA_BACKUP_CODES_COUNT=10

# File Upload Settings
MAX_FILE_SIZE_MB=100
UPLOAD_PATH=/app/data/files
BACKUP_PATH=/app/data/backups

# Rate Limiting (Relaxed for development)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Database Settings
DB_ECHO=true
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Container Settings
PYTHONPATH=/app
