# Production Environment Configuration for DocSafe
# All services run in Docker containers

# Backend Configuration
DATABASE_URL=postgresql://securevault_user:securevault_password@db:5432/securevault
REDIS_URL=redis://:redis_password@redis:6379/0
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_SECURE_KEY_123456789
ENVIRONMENT=production
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Security Settings (Production)
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Production Features
DEBUG=false
LOG_LEVEL=WARNING
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# SSL/HTTPS
USE_HTTPS=true
SECURE_COOKIES=true
SECURE_HEADERS=true

# MFA Settings
MFA_ISSUER=DocSafe
MFA_BACKUP_CODES_COUNT=10

# File Upload Settings
MAX_FILE_SIZE_MB=50
UPLOAD_PATH=/app/data/files
BACKUP_PATH=/app/data/backups

# Rate Limiting (Strict for production)
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_BURST=5

# Database Settings
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_FILE=/app/logs/app.log
