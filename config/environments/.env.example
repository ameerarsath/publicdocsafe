# DocSafe Environment Configuration Template
# Copy this file to .env.development, .env.production, or .env.test
# and customize the values for your environment

# =======================
# Database Configuration
# =======================
DATABASE_URL=postgresql://securevault_user:securevault_password@localhost:5432/securevault
POSTGRES_USER=securevault_user
POSTGRES_PASSWORD=securevault_password
POSTGRES_DB=securevault
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =======================
# Redis Configuration
# =======================
REDIS_URL=redis://localhost:6379/0
# For Redis with password: redis://:password@localhost:6379/0

# =======================
# Security Configuration
# =======================
SECRET_KEY=change-this-super-secret-key-in-production-make-it-very-long-and-random
ENCRYPTION_KEY=change-this-encryption-key-in-production-also-make-it-long-and-random
ALGORITHM=HS256

# =======================
# Application Configuration
# =======================
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=SecureVault

# =======================
# CORS Configuration
# =======================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3005","http://127.0.0.1:3000","http://127.0.0.1:3005","http://localhost:5173"]

# =======================
# File Storage
# =======================
UPLOAD_DIR=./encrypted-files
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=["application/pdf","image/jpeg","image/png","text/plain","application/msword","application/vnd.openxmlformats-officedocument.wordprocessingml.document","application/vnd.ms-excel","application/vnd.openxmlformats-officedocument.spreadsheetml.sheet","text/csv","application/json","text/html","image/gif","image/webp","image/svg+xml"]

# =======================
# Email Configuration (Optional)
# =======================
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# =======================
# Session Configuration
# =======================
SESSION_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =======================
# Rate Limiting
# =======================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# =======================
# Security Headers
# =======================
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0

# =======================
# Frontend Configuration
# =======================
VITE_API_URL=http://localhost:8002
VITE_WS_URL=ws://localhost:8002
VITE_APP_TITLE=DocSafe
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_DEBUG_MODE=true

# Security
VITE_SECURE_COOKIES=false
VITE_ENABLE_HTTPS=false

# File Upload
VITE_MAX_FILE_SIZE=104857600
VITE_CHUNK_SIZE=1048576

# Encryption
VITE_ENCRYPTION_ALGORITHM=AES-GCM
VITE_KEY_LENGTH=256

# UI Configuration
VITE_THEME=light
VITE_ENABLE_DARK_MODE=true

# Development Settings
VITE_HOT_RELOAD=true
VITE_SOURCE_MAP=true