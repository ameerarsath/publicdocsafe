# Database Configuration
POSTGRES_DB=securevault
POSTGRES_USER=securevault_user
POSTGRES_PASSWORD=change-this-secure-password

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password

# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production-use-at-least-32-characters
ENVIRONMENT=production
API_URL=https://your-domain.com/api
CORS_ORIGINS=https://your-domain.com

# Email Configuration (Gmail SMTP)
GMAIL_USERNAME=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-specific-password

# NAS Configuration (Optional)
NAS_TYPE=nfs
NAS_HOST=your-nas-host
NAS_SHARE=/path/to/share
NAS_USERNAME=nas-user
NAS_PASSWORD=nas-password
NAS_MOUNT_OPTIONS=

# SSL Configuration
SSL_CERT_PATH=/data/securevault/ssl/cert.pem
SSL_KEY_PATH=/data/securevault/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30