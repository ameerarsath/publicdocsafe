# DocSafe Backend Environment Configuration Template
# Copy this file to .env and fill in your specific values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://securevault_user:your_password@localhost:5430/securevault
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://:your_redis_password@localhost:6380/0
REDIS_MAX_CONNECTIONS=20

# ================================
# APPLICATION SECURITY
# ================================
SECRET_KEY=your-super-secret-key-must-be-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================
# ENVIRONMENT SETTINGS
# ================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# ================================
# CORS SETTINGS
# ================================
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ================================
# MULTI-FACTOR AUTHENTICATION
# ================================
MFA_ISSUER=DocSafe
MFA_BACKUP_CODES_COUNT=10
MFA_TOTP_WINDOW=1

# ================================
# FILE UPLOAD SETTINGS
# ================================
MAX_FILE_SIZE_MB=50
UPLOAD_PATH=./data/files
BACKUP_PATH=./data/backups
TEMP_PATH=./temp
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "txt", "png", "jpg", "jpeg", "gif", "xls", "xlsx", "ppt", "pptx"]

# ================================
# ENCRYPTION SETTINGS
# ================================
ENCRYPTION_KEY_LENGTH=32
PBKDF2_ITERATIONS=100000
SALT_LENGTH=16

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_BURST=5
RATE_LIMIT_ENABLED=true

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yourdomain.com

# ================================
# SECURITY HEADERS
# ================================
SECURE_HEADERS_ENABLED=true
USE_HTTPS=true
SECURE_COOKIES=true

# ================================
# PRODUCTION FEATURES
# ================================
ENABLE_SWAGGER_UI=false
ENABLE_REDOC=false
ENABLE_CORS=true
ENABLE_DEBUG_TOOLBAR=false

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/docsafe.log
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=10

# ================================
# TESTING CONFIGURATION
# ================================
TEST_DATABASE_URL=postgresql://securevault_user:your_password@localhost:5430/securevault_test
TEST_REDIS_URL=redis://:your_redis_password@localhost:6380/1

# ================================
# PRODUCTION OVERRIDES
# ================================
SKIP_AUTH_FOR_HEALTH_CHECK=false
ENABLE_TEST_ENDPOINTS=false
MOCK_EXTERNAL_SERVICES=false
