# DocSafe Backend Development Environment
# Copy this to .env for local development

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://securevault_user:securevault_password@localhost:5430/securevault
DB_ECHO=true
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://:redis_password@localhost:6380/0
REDIS_MAX_CONNECTIONS=20

# ================================
# APPLICATION SECURITY
# ================================
SECRET_KEY=dev-secret-key-change-in-production-32-chars-minimum-length-required
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ================================
# ENVIRONMENT SETTINGS
# ================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# ================================
# CORS SETTINGS
# ================================
CORS_ORIGINS=["http://localhost:3005", "http://127.0.0.1:3005", "http://localhost:5173", "http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ================================
# MULTI-FACTOR AUTHENTICATION
# ================================
MFA_ISSUER=DocSafe Development
MFA_BACKUP_CODES_COUNT=10
MFA_TOTP_WINDOW=1

# ================================
# FILE UPLOAD SETTINGS
# ================================
MAX_FILE_SIZE_MB=100
UPLOAD_PATH=./data/files
BACKUP_PATH=./data/backups
TEMP_PATH=./temp
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "txt", "png", "jpg", "jpeg", "gif", "xls", "xlsx", "ppt", "pptx", "zip", "rar"]

# ================================
# ENCRYPTION SETTINGS
# ================================
ENCRYPTION_KEY_LENGTH=32
PBKDF2_ITERATIONS=100000
SALT_LENGTH=16

# ================================
# RATE LIMITING (Development - Relaxed)
# ================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20
RATE_LIMIT_ENABLED=true

# ================================
# EMAIL CONFIGURATION (Optional for dev)
# ================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@docsafe.dev

# ================================
# SECURITY HEADERS
# ================================
SECURE_HEADERS_ENABLED=false
USE_HTTPS=false
SECURE_COOKIES=false

# ================================
# DEVELOPMENT FEATURES
# ================================
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_CORS=true
ENABLE_DEBUG_TOOLBAR=true

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/docsafe.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ================================
# TESTING CONFIGURATION
# ================================
TEST_DATABASE_URL=postgresql://securevault_user:securevault_password@localhost:5430/securevault_test
TEST_REDIS_URL=redis://:redis_password@localhost:6380/1

# ================================
# DEVELOPMENT OVERRIDES
# ================================
SKIP_AUTH_FOR_HEALTH_CHECK=true
ENABLE_TEST_ENDPOINTS=true
MOCK_EXTERNAL_SERVICES=false
