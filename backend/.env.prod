# DocSafe Backend Production Environment
# This file should be customized for production deployment

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://securevault_user:CHANGE_THIS_PASSWORD@db:5432/securevault
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_URL=redis://:CHANGE_THIS_PASSWORD@redis:6379/0
REDIS_MAX_CONNECTIONS=50

# ================================
# APPLICATION SECURITY
# ================================
SECRET_KEY=CHANGE_THIS_TO_A_VERY_SECURE_KEY_AT_LEAST_32_CHARACTERS_LONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================
# ENVIRONMENT SETTINGS
# ================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com", "api.yourdomain.com"]

# ================================
# CORS SETTINGS
# ================================
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
CORS_ALLOW_HEADERS=["Authorization", "Content-Type", "X-Requested-With", "X-CSRF-Token"]

# ================================
# MULTI-FACTOR AUTHENTICATION
# ================================
MFA_ISSUER=DocSafe
MFA_BACKUP_CODES_COUNT=10
MFA_TOTP_WINDOW=0

# ================================
# FILE UPLOAD SETTINGS
# ================================
MAX_FILE_SIZE_MB=50
UPLOAD_PATH=/app/data/files
BACKUP_PATH=/app/data/backups
TEMP_PATH=/app/temp
ALLOWED_FILE_TYPES=["pdf", "doc", "docx", "txt", "png", "jpg", "jpeg", "gif", "xls", "xlsx", "ppt", "pptx"]

# ================================
# ENCRYPTION SETTINGS
# ================================
ENCRYPTION_KEY_LENGTH=32
PBKDF2_ITERATIONS=100000
SALT_LENGTH=16

# ================================
# RATE LIMITING (Production - Strict)
# ================================
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_BURST=5
RATE_LIMIT_ENABLED=true

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=CHANGE_THIS_EMAIL@gmail.com
SMTP_PASSWORD=CHANGE_THIS_APP_PASSWORD
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yourdomain.com

# ================================
# SECURITY HEADERS
# ================================
SECURE_HEADERS_ENABLED=true
USE_HTTPS=true
SECURE_COOKIES=true

# ================================
# PRODUCTION FEATURES
# ================================
ENABLE_SWAGGER_UI=false
ENABLE_REDOC=false
ENABLE_CORS=true
ENABLE_DEBUG_TOOLBAR=false

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/app/logs/docsafe.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=20

# ================================
# MONITORING & PERFORMANCE
# ================================
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# ================================
# PRODUCTION SECURITY
# ================================
SKIP_AUTH_FOR_HEALTH_CHECK=false
ENABLE_TEST_ENDPOINTS=false
MOCK_EXTERNAL_SERVICES=false
FORCE_HTTPS=true
SESSION_SECURE=true
