# DocSafe Frontend Environment Configuration Template
# Copy this file to .env and fill in your specific values

# ================================
# API CONFIGURATION
# ================================
VITE_API_URL=http://localhost:8002
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# ================================
# APPLICATION SETTINGS
# ================================
VITE_APP_TITLE=DocSafe
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Zero-Knowledge Document Storage Platform
VITE_ENVIRONMENT=production

# ================================
# SECURITY SETTINGS
# ================================
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true
VITE_CSRF_PROTECTION=true

# ================================
# ENCRYPTION CONFIGURATION
# ================================
VITE_ENCRYPTION_ALGORITHM=AES-GCM
VITE_ENCRYPTION_KEY_LENGTH=256
VITE_PBKDF2_ITERATIONS=100000
VITE_SALT_LENGTH=128

# ================================
# FILE UPLOAD SETTINGS
# ================================
VITE_MAX_FILE_SIZE_MB=50
VITE_CHUNK_SIZE_MB=5
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg,gif,xls,xlsx,ppt,pptx
VITE_PREVIEW_SUPPORTED_TYPES=pdf,txt,png,jpg,jpeg,gif

# ================================
# UI/UX SETTINGS
# ================================
VITE_THEME_MODE=system
VITE_DEFAULT_LANGUAGE=en
VITE_PAGINATION_PAGE_SIZE=20
VITE_SEARCH_DEBOUNCE_MS=300

# ================================
# PRODUCTION FEATURES
# ================================
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_DEBUG_LOGS=false
VITE_SHOW_PERFORMANCE_METRICS=false
VITE_ENABLE_HOT_RELOAD=false
VITE_MOCK_API=false

# ================================
# MFA SETTINGS
# ================================
VITE_MFA_ISSUER=DocSafe
VITE_MFA_QR_SIZE=200
VITE_MFA_BACKUP_CODES_COUNT=10

# ================================
# SESSION MANAGEMENT
# ================================
VITE_SESSION_TIMEOUT_MINUTES=15
VITE_SESSION_WARNING_MINUTES=2
VITE_AUTO_LOGOUT_ENABLED=true

# ================================
# ANALYTICS & MONITORING
# ================================
VITE_ANALYTICS_ENABLED=true
VITE_ERROR_REPORTING_ENABLED=true
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GA_TRACKING_ID=your_ga_id_here

# ================================
# FEATURE FLAGS
# ================================
VITE_FEATURE_DOCUMENT_SHARING=true
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_ADMIN_DASHBOARD=true
VITE_FEATURE_AUDIT_LOGS=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_TEMPLATE_WORKFLOWS=false

# ================================
# PRODUCTION SETTINGS
# ================================
VITE_SKIP_SERVICE_WORKER=false
VITE_DISABLE_ANIMATIONS=false
VITE_FORCE_MOBILE_VIEW=false
VITE_SHOW_COMPONENT_BOUNDARIES=false
